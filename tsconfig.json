{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "rootDir": ".",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "paths": {
            "*": [
                "./node_modules/*",
                "./*",
                "./src/*",
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
